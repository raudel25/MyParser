class Figure{l}

impl Figure{
    func perimeter(self){
        p = 0;

        for i in size(self.l){
            p += self.l[i];
        }

        return p;
    }

    func area(self) => null
}

class Triangle{h}

impl Triangle of Figure{
    func new(h, a, b, c) => Triangle{h, [a, b, c]}

    func area(self) => self.h * self.l[0] / 2 
}

class Rectangle{}

impl Rectangle of Figure{
    func new(a, b) => Rectangle{[a, b] * 2}

    func area(self) => self.l[0] * self.l[1]
}

class Square{}

impl Square of Rectangle{
    func new(a) => Square{[a] * 4}
}